{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "15px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M1443 2045L421 1024 1443 3l90 90-930 931 930 931-90 90z\"></path></svg>",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "Previous",
                                "data": {
                                    "id": "Previous"
                                }
                            }
                        }
                    ],
                    "verticalContentAlignment": "Top",
                    "style": "default"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Position - ${teamDetails.position}",
                            "size": "Medium",
                            "weight": "Bolder",
                            "horizontalAlignment": "Center"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${teamDetails.team.name}",
                            "size": "Medium",
                            "horizontalAlignment": "Center",
                            "color": "Dark",
                            "weight": "Bolder"
                        },
                        {
                            "type": "Image",
                            "url": "${teamDetails.team.crestUrl}",
                            "horizontalAlignment": "Center",
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "15px",
                    "items": [
                        {
                            "type": "Image",
                            "url": "data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 2048 2048\"><path d=\"M515 1955l930-931L515 93l90-90 1022 1021L605 2045l-90-90z\"></path></svg>",
                            "selectAction": {
                                "type": "Action.Submit",
                                "title": "Next",
                                "data": {
                                    "id": "Next"
                                }
                            }
                        }
                    ],
                    "verticalContentAlignment": "Top"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Played : ${teamDetails.playedGames}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Points : ${teamDetails.points}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "GD : ${teamDetails.goalDifference}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "weight": "Bolder"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Won : ${teamDetails.won}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "color": "Good",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Lost : ${teamDetails.lost}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "color": "Attention",
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Draw : ${teamDetails.draw}",
                            "wrap": true,
                            "horizontalAlignment": "Center",
                            "size": "Medium",
                            "color": "Accent",
                            "weight": "Bolder"
                        }
                    ]
                }
            ]
        }
    ]
}